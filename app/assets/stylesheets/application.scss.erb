$font-size-base: 13px;
$font-size-bigger: 14px;
$font-size-smaller: 10px;

$line-height-base: 1.2308;
$line-height-computed: 16px;

$headings-font-weight: 900px;

$icon-font-path: "/fonts/";
$icon-font-name: "glyphicons-regular";

$black: rgb(0, 0, 0);
$near-black: rgb(30, 30, 30);
$gray-darker: rgb(54, 54, 54);
$gray: rgb(109, 109, 109);
$mid-gray: rgb(128, 128, 128);
$light-gray: rgb(204, 204, 204);
$gray-lighter: rgb(238, 238, 238);
$gray-lightest: rgb(250, 250, 250);
$warm-gray: rgb(228, 228, 224);
$warm-gray-light: rgb(250, 250, 248);
$green-yellow: rgb(208, 250, 48);
$white: rgb(255, 255, 255);

$highlight-color: $green-yellow;
$brand-primary: $green-yellow;
$font-color-light: $gray;
$font-color: $gray-darker;
$form-color: $font-color;

$link-color: $font-color;
$link-color-hover: $black;

$nav-background-color: $gray-darker;
$nav-font-color: $light-gray;

$body-background-color: $warm-gray;
$content-background-color: $warm-gray-light;
$content-border-color: $light-gray;

$table-border: darken($warm-gray, 18);

$container-tablet: 100%;
$container-sm : 100%;
$container-desktop: 100%;
$container-md : 100%;
$container-large-desktop: 100%;
$container-lg : 100%;

$content-margin-bottom: 16px;
$content-padding: 16px;

$nav-link-padding: 8px 12px;
$nav-pills-border-radius: 5px;
$pagination-active-bg: $gray-lighter;
$pagination-color: $mid-gray;
$pagination-active-color: $mid-gray;
$pagination-active-border: $light-gray;
$pagination-disabled-color: $light-gray;

$input-border-focus: darken($highlight-color, 15);

<% if File.exist?("local/app/assets/stylesheets/_racing_association_variables.scss") %>
@import "racing_association_variables";
<% end %>

@import "bootstrap-sprockets";
@import "bootstrap";
@import "bootstrap/theme";

@font-face {
  font-family: 'glyphicons-regular';
  src: url('/fonts/glyphicons-regular.eot');
  src: url('/fonts/glyphicons-regular.eot?#iefix') format('embedded-opentype'),
       url('/fonts/glyphicons-regular.woff') format('woff'),
       url('/fonts/glyphicons-regular.ttf') format('truetype'),
       url('/fonts/glyphicons-regular.svg#open_sans') format('svg');
}

body {
  background-color: $body-background-color;
  color: $font-color;
  padding-top: $line-height-computed;
  padding-bottom: $line-height-computed;
}

.container {
  padding-left: 3%;
  padding-right: 3%;
}

.container .container {
  padding-left: 0;
  padding-right: 0;
}

body nav a:hover, body footer a:hover, body a:hover, a:hover, .nav > li > a:hover, .btn-link:hover {
  background-color: $highlight-color;
  color: $link-color-hover;
  text-decoration: underline;
  text-shadow: none;
}

.btn-link, a.obvious {
  text-decoration: underline;
}

body a.icon:hover, a.icon:hover {
  background-color: transparent;
}

body a.icon:active, a.icon:active {
  background-color: transparent;
  color: $highlight-color;
}

.section {
  padding-top: $line-height-computed * 3;
}

h2, h2 a, h2 a:hover {
  color: $link-color-hover;
  text-align: center;
  text-decoration: none;
}

h3, h3 a, h3 a:hover {
  color: $link-color-hover;
  text-align: center;
  text-decoration: none;
}

h2 a:hover, h3 a:hover {
  background-color: $highlight-color;
}

.page-nav, .footer {
  margin-bottom: $line-height-computed;
}

.page-nav, .social {
  height: 18px;
  padding-left: $line-height-computed / 2;
}

@media (max-width: 767px) {
  .page-nav {
    margin-bottom: $line-height-computed / 2;
  }

  h2 {
    font-size: 16px;
    line-height: $line-height-computed;
  }

  h3 {
    font-size: 12px;
    line-height: $line-height-computed;
  }
}

h4 {
  color: $gray;
  font-size: $font-size-base;
  line-height: $line-height-computed;
  margin-bottom: 0;
  margin-top: 0;
  padding-top: 4px;
}

nav, footer {
  background-color: $nav-background-color;
  border: 1px solid darken($nav-background-color, 10);
  border-radius: 3px;
  vertical-align: center;

  background-image: -moz-linear-gradient(top, lighten($nav-background-color, 6), darken($nav-background-color, 6));
  background-image: -ms-linear-gradient(top, lighten($nav-background-color, 6), darken($nav-background-color, 6));
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(lighten($nav-background-color, 6)), to(darken($nav-background-color, 6)));
  background-image: -webkit-linear-gradient(top, lighten($nav-background-color, 6), darken($nav-background-color, 6));
  background-image: -o-linear-gradient(top, lighten($nav-background-color, 6), darken($nav-background-color, 6));
  background-image: linear-gradient(top, lighten($nav-background-color, 6), darken($nav-background-color, 6));
  background-repeat: repeat-x;
  -webkit-box-shadow: inset 0 1px 0 lighten($nav-background-color, 10);
  -moz-box-shadow: inset 0 1px 0 lighten($nav-background-color, 10);
  box-shadow: inset 0 1px 0 lighten($nav-background-color, 10);
}

nav h1 {
  display: inline;
  line-height: $line-height-computed * 1.6;
  margin: 0;
  padding-left: $line-height-computed / 2;
}

nav h1, nav h1 a, nav a, footer a {
  color: $nav-font-color;
  font-size: $font-size-bigger;
  text-shadow: -1px -1px 0 rgba(0, 0, 0, .35), 0 0 30 rgba(0, 0, 0, .3);
}

nav ul, footer ul {
  line-height: $line-height-computed * 1.5;
  margin-bottom: 0;
  margin-left: 0;
  padding-right: $line-height-computed / 2;
  padding-top: 1px;
  text-align: right;
}

footer ul {
  text-align: center;
}

nav li, footer li {
  border-right: 1px solid $nav-font-color;
  display: inline;
  list-style-type: none;
  padding-left: $line-height-computed / 2;
  padding-right: $line-height-computed / 2;
}

@media (max-width: 767px) {
  nav ul, footer ul {
    padding-left: 2px;
    padding-right: 2px;
  }

  nav li, footer li {
    padding-left: $line-height-computed / 4;
    padding-right: $line-height-computed / 4;
  }
}

nav li:last-child, footer li:last-child {
  border-right: 0;
}

.content {
  background-color: $content-background-color;
  border-radius: 6px;
  border: 1px solid $content-border-color;
  margin-bottom: $content-margin-bottom;
  padding: $content-padding;
}

@media (max-width: 979px) {
  .content {
    margin-bottom: $content-margin-bottom / 2;
    padding: $content-padding / 2;
  }
}

.table th, .table td {
  padding-bottom: 7px;
}

.table-striped td {
  border-bottom: 1px solid $table-border;
  border-top: none;
}

.table-striped tbody tr:first-child td {
  border-top: 2px solid $table-border;
}

.table-striped tbody tr:last-child td {
  border-bottom: 2px solid $table-border;
}

.table-striped tbody tr:nth-child(even) td, .table-striped tbody tr:nth-child(even) td:hover {
  background-color: lighten($warm-gray, 4);
}

.table-striped tbody tr:nth-child(odd) td, .table-striped tbody tr:nth-child(odd) td:hover {
  background-color: $warm-gray;
}

.table > thead > tr > th {
  border-bottom: none;
}

.table > thead > tr > th,
.table > thead > tr > td,
.table > tbody > tr > th,
.table > tbody > tr > td,
.table > tfoot > tr > th,
.table > tfoot > tr > td {
  border-top: none;
}

.table th, .table-striped tbody tr:nth-child(odd) th {
  background-color: $table-border;
  border-top: none;
  color: $near-black;
}

.table-striped.table th {
  padding-bottom: 3px;
  padding-top: 4px;
}

.table-striped td.icon {
  max-width: 22px;
  padding-right: 0;
  width: 22px;
}

.table-striped .check_box {
  text-align: center;
}

.odd {
  background-color: $warm-gray;
}

.even {
  background-color: lighten($warm-gray, 4);
}

.table-striped td.actions {
  padding-right: 16px;
  text-align: right;
  white-space: nowrap;

  a + a {
    margin-left: 8px;
  }
}

@media (max-width: 767px) {
  body {
    padding-left: 0;
    padding-right: 0;
    padding-top: $line-height-computed / 2;
  }

  nav ul {
    text-align: center;
  }

  .table td, .table th {
    padding-left: 4px;
    padding-right: 4px;
  }
}

.created_updated {
  color: $font-color-light;
  font-style: italic;
  .btn-link {
    text-decoration: none;
  }
  .btn-link:hover {
    text-decoration: underline;
  }
}

p.created_updated {
  text-align: center;
  padding-bottom: $line-height-computed;
}

.post div.date {
  margin-top: 8px;
}

.post div.date, .table .date {
  min-width: 80px;
  text-align: right;
  white-space: nowrap;
}

.table .date {
  max-width: 240px;
}

@media (max-width: 767px) {
  .post div.date, .table .date {
    width: auto;
  }

  .post div.date {
    text-align: left;
  }
}

th.numeric,
td.numeric {
  text-align: right;
}

.post {
  th.badges,
  td.badges {
    text-align: right;
  }

  td.badges {
    padding-top: 7px;
  }
}

.pills {
  text-align: center;
}

.pills + table, .pills + p {
  margin-top: $line-height-computed;
}

ul.nav-pills {
  display: inline-block;
  margin-bottom: 0;
}

.nav-pills li a {
  color: $mid-gray;
}

.nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus {
    background-color: $gray-lighter;
    color: $mid-gray;
}

ul.nav + h2 {
  margin-top: $line-height-computed;
}

ul.page-links {
  margin-bottom: $line-height-computed / 4;
  margin-left: auto;
  margin-right: auto;
  padding-top: 0;
  padding-bottom: 0;
  text-align: center;
  width: auto
}

ul.page-links li {
  display: inline;
  padding-left: 8px;
  padding-right: 8px;
  border-left: 1px solid $light-gray;
}

ul.page-links li:first-child {
  border-left: none;
}

@-ms-keyframes Rotate {
  from {-ms-transform:rotate(0deg);}
  to {-ms-transform:rotate(360deg);}
}

@-moz-keyframes Rotate {
  from {-moz-transform:rotate(0deg);}
  to {-moz-transform:rotate(360deg);}
}

@-webkit-keyframes Rotate {
  from {-webkit-transform:rotate(0deg);}
  to {-webkit-transform:rotate(360deg);}
}

@keyframes Rotate {
  from {transform:rotate(0deg);}
  to {transform:rotate(360deg);}
}

.rotate {
  -ms-animation: Rotate 2s infinite linear;
  -moz-animation: Rotate 2s infinite linear;
  -webkit-animation: Rotate 2s infinite linear;
  animation: Rotate 2s infinite linear;
}

.dropdown {
  text-align: center;
  .dropdown-menu {
    text-align: left;
  }
}

div.pagination {
  @include center-block();
  text-align: center;
}

ul.pagination {
  margin-bottom: 0;
}

@import "bootstrap-datepicker";
@import "jquery-ui-1.10.3.custom";
@import "glyphicons_pro";

<% if File.exist?("local/app/assets/stylesheets/_racing_association.scss") %>
@import "racing_association";
<% end %>

