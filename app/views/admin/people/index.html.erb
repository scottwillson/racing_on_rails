<% @page_title = "Admin: People" %>

<%= render :partial => "shared/search", :locals => { :name => @name } %>

<%= table :class => "people top_margin clear", :id => :people do %>
  <tr>
    <th class="icon"/>
    <th class="name">Name</th>
    <th class="team">Team</th>
    <th class="aliases">Aliases</th>
    <th class="license">License</th>
    <th class="check_box">Member</th>
    <th class="actions last"></th>
  </tr>
  <%= render :partial => "person", :collection => @people %>
  <% if @people.empty? %>
  <tr valign="top">
    <%- if @name.blank? -%>
    <td colspan="7" width="200" class="not_found">Enter part of a person's name</td>
    <%- else -%>
    <td colspan="7" width="200" class="not_found">No people found</td>
    <%- end -%>
  </tr>
  <% end %>
<% end -%>

<div class="buttons container">
  <div class="updatedon">
    <%= link_to(image_tag('icons/user_add.png'), new_admin_person_path, :class => "image new", :id => "new_person") %>
  </div>
  <div class="right">
    <%= link_to('Print Cards',  cards_admin_people_path(:format => "pdf")) %>
  </div>
</div>

<%= render :partial => 'import_export' %>
