<% if races.many? %>
<div class="event_info">
  <table class="event_races">
    <tbody>
      <%- races.sort.each_row do |first_race, second_race| -%>
      <tr>
        <%= tag.td class: (first_race&.rejected? ? %w( race rejected ) : :race) do %>
          <%= link_to first_race.name, calculations_race_path(first_race) %>
        <% end %>
        <%= tag.td class: (second_race&.rejected? ? %w( race rejected ) : :race) do %>
          <%- if second_race -%>
            <%= link_to second_race.name, calculations_race_path(second_race) %>
          <% end %>
        <% end %>
      </tr>
      <%- end -%>
    </tbody>
  </table>
</div>
<%- end -%>
