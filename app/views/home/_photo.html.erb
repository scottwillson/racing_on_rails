<% if photo.link.present? %>
  <%= link_to photo.link do %>
    <%= image_tag photo.image.desktop.url, title: photo.title, class: "hero-photo img-responsive center-block" %>
  <% end %>
<% else %>
  <%= image_tag photo.image.desktop.url, title: photo.title, class: "hero-photo img-responsive center-block" %>
<% end %>

<% if photo.caption.present? %>
  <span class="hero-photo-caption"><%= markdown photo.caption %></span>
<% end %>
