<% @page_title = "Login" %>
<% @show_tabs = false %>

<%= render "shared/errors", :object => @person_session %>

<%= form_for @person_session, :url => person_session_path, :html => { :class => "form-horizontal" } do |f| %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <%= f.labelled_text_field :login, nil, :class => @person_session.login.blank? ? "wants_focus span12" : "span12" %>
      <%= f.labelled_password_field :password, nil, :autocomplete => "off", :class => @person_session.login.blank? ? "span12" : "wants_focus span12" %>
      <div class="control-group">
        <div class="controls">
          <%= submit_tag "Login", :class => "btn btn-primary", :id => "login_button" %>
        </div>
      </div>
    </div>
    <div class="span6">
      <p>
        <strong>Don't Have a Login Yet?</strong>
        <br class="visible-phone"/>
        <%= link_to "Create a login", 
              people_new_login_path(:return_to => session[:return_to]), 
              { :class => "obvious", :id => "new_login" } %>
      </p>

      <p>
        <strong>Forgot Your Password?</strong>
        <br class="visible-phone"/>
        <%= link_to "Request a reminder", new_password_reset_path, { :class => "obvious forgot", :id => "forgot" } %>
    
        <% if @person_session.errors.any? %>
          You'll need to allow cookies to login
        <% end -%>
      </p>
    </div>
  </div>
</div>
<% end -%>
