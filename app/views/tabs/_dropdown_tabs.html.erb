<%= tag.li class: "dropdown active", role: "presentation" do %>
  <%= link_to(
        tabs.dropdown.text,
        tabs.dropdown.path,
        "aria-haspopup": "true",
        "aria-expanded": "false",
        class: "dropdown-toggle",
        data: { toggle: "dropdown" },
        id: "#{tabs.dropdown.text.underscore.gsub(" ", "_")}",
        role: "button"
  ) %>
  <ul class="dropdown-menu">
    <%= render collection: tabs.inactives, partial: "tabs/dropdown_tab" %>
  </ul>
<% end %>
