<% @page_title = "Alpenrose Velodrome" %>

<ul class="tabs">
  <li><%= link_to "Track Home", track_path %></li>
  <li><%= link_to "History", "http://#{RacingAssociation.current.static_host}/track/history/index.html" %></li>
  <li><%= link_to "Information", "http://#{RacingAssociation.current.static_host}/track/information/index.html" %></li>
  <li><%= link_to "Records", "http://#{RacingAssociation.current.static_host}/track/records/index.html" %></li>
  <li><%= link_to "Schedule", track_schedule_path %></li>
</ul>

<table class="centered top_margin">
  <tr valign="top">
    <td style="padding-right: 12px;">
      <!-- Left-side cell for main content -->
      
      <table bgcolor="#000000" cellspacing="0" border="0" cellpadding="1" width="300">
       
        <tr>
          <td colspan="3">
            <%= image_tag "http://#{RacingAssociation.current.static_host}/track/images/photos/avc_missandout.jpg", :border => 0, :size => "300x222", :alt => "AVC Miss and Out" %>
          </td>
            </tr>
            <tr bgcolor="black">
              <td>&nbsp;</td>
              <td><small><font color="#cccccc">Marty Nothstein leads the field during the Miss and Out competition of the Alpenrose Challenge.</font></small>
          </td>
              <td>&nbsp;</td>
        </tr>

      </table>

    </td>
    <td style="padding-left: 12px;">
      <%= upcoming_events_table(@upcoming_events,
                                link_to("Velodrome Schedule", track_schedule_path), 
                                "Please check the #{link_to("schedule page", track_schedule_path)} details and exceptions.".html_safe)
      %>
    </td>
  </tr>
</table>

<div class="centered top_margin"><%= image_tag "http://#{RacingAssociation.current.static_host}/track/images/logos/alpenrose_logo.gif", :border => 0, :size => "200x65", :alt => "Alpenrose" %></div>
